<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <body class="background-index">
        <h1>Newsfeed</h1>

            <% @posts.each do |post| %>
              <% if current_user.following?(post.user) == true and post.status != "private" %>
              <div class="card-index mx-auto"><%= link_to post.original_url do %>
                    <h2 class="h2-index-page"><%= post.title.truncate(100) %></h2>
                       <% if post.image? %>
                        <%= image_tag post.image, height: 80 %>
                      <% else %>
                        <%= image_tag('https://res.cloudinary.com/doubleuuser/image/upload/v1659143866/personalspace/Stuck_at_Home_-_Horizontal_Painting_3_wfzyeu.png', height: 80) %>
                      <% end %>
                    <% end %>

                <div><%= link_to post_path(post) do %>
                    <%# <%= cl_image_tag post.user.photo.key if post.user.photo && post.user.photo.key %>
                    <p class="p-index-page"><%= post.note %></strong></p>
                  </div><% end %>
                  <% end %>
                  </div>
                  <% end %>


              <% @posts.each do |post| %>
                <% if current_user == post.user %>
                  <div class="card-index mx-auto"><%= link_to post.original_url do %>
                    <h2 class="h2-index-page"><%= post.title.truncate(100) %></h2>
                       <% if post.image? %>
                        <%= image_tag post.image, height: 80 %>
                      <% else %>
                        <%= image_tag('https://res.cloudinary.com/doubleuuser/image/upload/v1659143866/personalspace/Stuck_at_Home_-_Horizontal_Painting_3_wfzyeu.png', height: 80) %>
                      <% end %>
                    <% end %>

                    <div><%= link_to post_path(post) do %>
                    <%# <%= cl_image_tag post.user.photo.key if post.user.photo && post.user.photo.key %>
                    <p class="p-index-page"><%= post.note %></strong></p>
                  </div><% end %>
                  <% end %>
                  </div>
                  <% end %>

                  <div class="new-user-container">
                    <h2><em>What did you read about?</em></h2>
                    <p style="margin-left: 100px">
                      <span data-controller="typed-js"></span>
                    </p>


                    <div>
                      <button type="button" class= "btn btn-flat-index" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Add Post</button>
                    </div>

                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <%= image_tag('https://res.cloudinary.com/doubleuuser/image/upload/v1658553188/personalspace/Stuck_at_Home_-_Movie_Night_zhiaxw.png', width: 300) %>
                      </div>
                      <div class="carousel-item">
                        <%= image_tag('https://res.cloudinary.com/doubleuuser/image/upload/v1658553189/personalspace/Stuck_at_Home_-_Group_Call_lltfqu.png', width: 300) %>
                      </div>
                      <div class="carousel-item">
                        <%= image_tag('https://res.cloudinary.com/doubleuuser/image/upload/v1658553188/personalspace/Stuck_at_Home_-_Online_Shopping_sxvrzw.png', width: 300) %>
                      </div>
                    </div>
          <%# <div> %>
            <%# <button><%= link_to "Add Post", new_post_path </button> %>
          <%# </div> %>
      </body>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [ Post.new ] do |f| %>
          <div class="mb-3">
            <label class="col-form-label"><%= f.input :original_url %></label>
          </div>
          <div class="mb-3">
            <label class="col-form-label"><%= f.input :note, as: :text %></label>
          </div>
          <div class="mb-3">
            <label class="col-form-label"><%= f.input :status, collection:Post.statuses.keys %></label>
          </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= f.submit "Save", class: "btn btn-gradient"  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
