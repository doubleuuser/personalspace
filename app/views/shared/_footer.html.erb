 <nav class="mobile-nav">
        <%= link_to posts_path do %>
            <i class="fas fa-home"></i>
        <% end %>
        <i data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo" class="fas fa-plus"></i>
        <% if user_signed_in? %>
          <%= link_to user_path(current_user) do %>
            <i class="fas fa-user"></i>
          <% end %>
        <% else %>
           <%= link_to new_user_session_path do %>
            <i class="fas fa-user"></i>
          <% end %>
        <% end %>
  </nav>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [ Post.new ] do |f| %>
          <div class="mb-3">
            <label class="col-form-label"><%= f.input :original_url %></label>
          </div>
          <div class="mb-3">
            <label class="col-form-label"><%= f.input :note, as: :text %></label>
          </div>
          <div class="mb-3">
            <label class="col-form-label"><%= f.input :status, collection:Post.statuses.keys %></label>
          </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= f.submit "Save", class: "btn btn-gradient"  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
